import os
import sys
import sphinx_rtd_theme

sys.path.insert(0, os.path.abspath('{{ python_path }}'))

# Project info

project = u'{{ project }}'
version = '{{ version }}'
release = version

# Theming

html_theme = 'sphinx_rtd_theme'
html_theme_path = [sphinx_rtd_theme.get_html_theme_path()]
