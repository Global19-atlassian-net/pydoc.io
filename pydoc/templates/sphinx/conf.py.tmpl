    'output_directory': '{{ output_directory }}',
    'analytics_code' = 'UA-17997319-4',
    'user_analytics_code' = 'UA-17997319-4',
    'versions': [
    {% for release in releases %}
    ("{{ release.version }}", "/pypi/{{ release.release_name }}/index.html"),
    {% endfor %}
    ],
